<VirtualHost *:80 %>>
    ServerName backcountry-project
    DocumentRoot /opt/rails_app/public
    <Directory /opt/rails_app/public >
        Allow from all
        Options -MultiViews
        # Uncomment this if you're on Apache >= 2.4:
        Require all granted
    </Directory>
    #RailsEnv <%= @environment %>
</VirtualHost>
